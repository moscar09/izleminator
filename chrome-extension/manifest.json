{
  "manifest_version": 2,

  "name": "Izleminator",
  "description": "Enables a chat client along your video stream",
  "version": "0.3",
  "content_scripts": [{
    "matches": ["http://dizimag2.co/*", "http://localhost:8080/*"],
    "js": [
        "scripts/lib/jquery.min.js",
        "scripts/lib/socket.io.js",
        "scripts/config.js",
        "scripts/main.js"
    ],
    "css": ["style.css"]
  }],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Izleminate!"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "scripts/JWPlayerWrapper.js",
    "scripts/dizimag.js"
  ],
  "externally_connectable": {
    "matches": ["http://dizimag2.co/*"]
  }
}
