{
  "manifest_version": 2,

  "name": "Izleminator",
  "description": "Enables a chat client along your video stream",
  "version": "0.4.1",
  "content_scripts": [{
    "matches": [
        "http://tatooine.moscar.ro/*",
        "http://dizimag2.co/*",
        "http://dizimag3.co/*",
        "https://www.netflix.com/watch/*"
    ],
    "js": [
        "scripts/lib/jquery.min.js",
        "scripts/config.js",
        "scripts/playerWrappers/JWPlayerWrapper.js",
        "scripts/playerWrappers/cadmium-player-wrapper.js",
        "scripts/playerWrappers/test-player-wrapper.js",
        "scripts/izleminator-client.js",
        "scripts/izleminator-chat.js",
        "scripts/main.js"
    ],
    "css": ["style.css"],
    "run_at":"document_end"
  }],

  "browser_action": {
    "default_icon": "icons/icon64.png",
    "default_popup": "popup.html",
    "default_title": "Izleminate!",
    "icons": { 
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "64": "icons/icon64.png",
          "128": "icons/icon128.png",
          "256": "icons/icon256.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "scripts/playerWrappers/JWPlayerWrapper.js",
    "scripts/playerWrappers/cadmium-player-wrapper.js",
    "scripts/playerWrappers/test-player-wrapper.js",
    "scripts/lib/jquery.min.js",    
    "scripts/inlined.js"
  ],
  "externally_connectable": {
    "matches": [
        "http://tatooine.moscar.ro/*",
        "http://dizimag2.co/*",
        "http://dizimag3.co/*"
    ]
  }
}
